{
  "version": "4.0",
  "description": "Spawner v4 - Native Claude Code with Python hooks support",
  "passwordFile": ".passwords.json",
  "defaults": {
    "template": "cc-vanilla"
  },
  "despawn": {
    "backup": true,
    "confirm": true
  },
  "dependencies": {
    "claudeCode": {
      "version": "latest",
      "channel": "stable",
      "baseUrl": "https://storage.googleapis.com/claude-code-dist-86c565f3-f756-42ad-8dfa-d59b1c096819/claude-code-releases",
      "platform": "win32-x64"
    },
    "python": {
      "version": "3.12.8",
      "baseUrl": "https://www.python.org/ftp/python",
      "embeddable": true
    }
  },
  "admin": {
    "configDir": "C:\\Users\\YourUser\\.claude",
    "backupRetention": 10,
    "autoBackupOnUpgrade": true
  },
  "backups": {
    "path": "backups",
    "adminPath": "backups/admin",
    "usersPath": "backups/users",
    "exportsPath": "exports",
    "retentionDays": 30
  },
  "git": {
    "enabled": true,
    "defaultBranch": "main"
  },
  "github": {
    "defaultVisibility": "private",
    "templatePrefix": "cc-template-"
  },
  "sync": {
    "excludePaths": ["cache", "session-env", "logs", "state"],
    "preservePaths": ["TELOS", "memory/long-term"]
  },
  "security": {
    "sanitize": {
      "removeFiles": [".env", ".credentials.json", "api-keys.env", ".passwords.json", "settings.local.json"],
      "removeDirs": ["cache", "logs", "state", "telemetry", "session-env", "debug", "temp", "shell-snapshots", "paste-cache", "statsig"],
      "redactPatterns": ["sk-ant-api0[0-9]-[A-Za-z0-9_-]+", "ghp_[A-Za-z0-9]+", "sk-[A-Za-z0-9]+", "xoxb-[A-Za-z0-9-]+", "xoxp-[A-Za-z0-9-]+"]
    }
  },
  "validation": {
    "enabled": true,
    "autoFix": true,
    "requiredSchema": "https://json.schemastore.org/claude-code-settings.json",
    "usernamePattern": "^[a-zA-Z][a-zA-Z0-9_-]{0,19}$",
    "apiKeyPattern": "^sk-ant-api0[0-9]-[A-Za-z0-9_-]+$",
    "forbiddenPaths": [
      "_OWNER_HOME_PATH_"
    ],
    "cleanDirectories": [
      "cache", "debug", "logs", "paste-cache", "shell-snapshots",
      "session-env", "statsig", "state", "telemetry", "temp",
      "todos", "file-history", "history", "projects", "plugins", "config"
    ],
    "cleanFiles": [
      "history.jsonl", "agent-sessions.json", "span-sessions.json",
      "langfuse-span-cache.json", "stats-cache.json", "tool-timing-cache.json",
      "settings.local.json", ".claude.json", ".credentials.json"
    ]
  },
  "templates": {
    "cc-vanilla": {
      "description": "Stock Claude Code - minimal, no hooks (native install)",
      "path": "templates/cc-vanilla/.claude",
      "complexity": "minimal",
      "requiresPython": false
    },
    "cc-python": {
      "description": "Claude Code with Python hooks - Anthropic patterns",
      "path": "templates/cc-python/.claude",
      "complexity": "basic",
      "requiresPython": true
    },
    "cc-vanilla-legacy": {
      "description": "[LEGACY] Stock Claude Code - npm-based installation",
      "path": "templates/cc-vanilla-legacy/.claude",
      "complexity": "minimal",
      "legacy": true,
      "requiresNode": true
    }
  },
  "projects": {
    "_example_spawner": "C:\\Users\\YOURUSERNAME\\Spawner",
    "_example_project": "C:\\Users\\YOURUSERNAME\\projects\\my-project"
  },
  "categories": {
    "lab": {
      "description": "Testing environments - reset often, experimental",
      "defaultTemplate": "cc-vanilla"
    },
    "dev": {
      "description": "Development environments - Python hooks for building",
      "defaultTemplate": "cc-python"
    },
    "work": {
      "description": "Work environments - Python hooks for production work",
      "defaultTemplate": "cc-python"
    }
  },
  "identities": {
    "_comment": "Universal identities - work with any base template",
    "available": ["developer", "researcher", "learner", "auditor"],
    "path": "identities"
  }
}
